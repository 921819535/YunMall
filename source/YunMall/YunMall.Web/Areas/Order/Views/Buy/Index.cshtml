@using System.Web.Optimization
@using YunMall.Entity
@model dynamic

@{
    ViewBag.Title = "订单窗口";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}

@section scripts {
    @Scripts.Render("~/Content/js/module/order/buy.js")
}

<div class="head">
    <div class="navigation">
        <span class="logo"></span>
    </div>

    <div class="content">
        <div class="item-line">
            <h3 style="font-weight: bold;">商品清单</h3>
        </div>

        <div class="item-line" style="min-height: 380px;">
            <table class="table-product">
                <thead>
                <tr>
                    <th style="width:198px">缩略图</th>
                    <th style="width:198px">商品名</th>
                    <th style="width:198px">价格</th>
                    <th style="width:198px">数量</th>
                    <th style="width:198px">操作</th>
                </tr>
                </thead>
                <tbody>
                <!--
                <tr>
                    <td>
                        <img src="/Content/upload_image/20180921/636731695907172444.jpg" />
                    </td>
                    <td>
                        <a href="#" class="title">中秋节月饼(广州)</a>
                    </td>
                    <td>
                        <span class="price" data-amount="128.00">128.00</span>
                    </td>
                    <td>
                        <input class="num" type="number" name="name" value="1" onblur="flushPrice(this)" onkeypress="return /[\d]/.test(String.fromCharCode(event.keyCode))" />
                    </td>
                    <td>
                        <button class="button button-red">移除</button>
                    </td>
                </tr>-->

                </tbody>
            </table>
        </div>

        <div class="item-line">
            <div id="page" style="text-align: center"></div>
        </div>

        <div class="item-line">
            <h3 style="font-weight: bold;height:60px">支付方式</h3>
        </div>

        <div class="item-line" style="padding-left: 25px;">
            <ul class="payment">
                <li data-type="alipay" title="支付宝支付">
                </li>
            </ul>
        </div>

        <div class="item-line" style="text-align: right;">
            <h3 style="color: #a5a5a5">支付总额</h3>
            <span style="display: inline-block; float: left; color: #e54f4f; padding-left: 25px;">支付中如遇到问题，请您及时联系客服人员</span>
            <p></p>
        </div>

        <div class="item-line" style="text-align: right">
            <h1 style="font-size: 42px; font-weight: bold; color: #FF4400; display: inline-block">￥</h1>
            <h1 style="font-size: 42px; font-weight: bold; color: #FF4400; display: inline-block" id="total">0</h1>
            <h3 style="display: inline-block; margin-left: 10px; font-size: 12px; color: #000">元</h3>

        </div>

        <span style="display: block; float: left; color: #cacaca; padding-left: 25px;">防骗防盗：系统并不存在卡单，请勿相信也不要随意打开陌生人发来的链接</span>
        <button id="goPay" class="button button-red button-lg" style="float: right; margin-top: 20px;background-color: #fc6363;">去支付</button>
    </div>
    
    
    <div style="position: relative; top: 60px;width: 1140px; margin: 0 auto; text-align: center; font-size: 12px; color: #a5a5a5;">
        <span>2018 - @Constants.Brand</span>
    </div>
</div>


